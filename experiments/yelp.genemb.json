{
    "dataset_reader": {
        "type": "json-reader",
        "lazy": true
    },
    "train_data_path": "data/processed/dataset/yelp/en.train.jsonl",
    "validation_data_path": "data/processed/dataset/yelp/en.dev.jsonl",
    "model": {
        "type": "simple-classifier",
        "text_field_embedder": {
            "tokens": {
                "type": "embedding",
                "pretrained_file": "data/processed/wordemb/wiki.en.vec",
                "embedding_dim": 300,
                "trainable": false
            }
        },
        "text_encoder": {
            "type": "boe",
            "embedding_dim": 300
        },
        "classifier_feedforward": {
            "input_dim": 300,
            "num_layers": 2,
            "hidden_dims": [300, 3],
            "activations": ["linear", "linear"],
            "dropout": [0.2, 0.2]
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["text", "num_tokens"]],
        "batch_size": 32
    },
    "trainer": {
        "num_epochs": 20,
        "patience": 10,
        "cuda_device": 0,
        "grad_clipping": 5.0,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam"
        }
    }
}
